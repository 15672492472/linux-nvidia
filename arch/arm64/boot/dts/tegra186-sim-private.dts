/dts-v1/;

/memreserve/ 0x80000000 0x00010000;

#include "tegra186.dtsi"
#include "tegra186-cpus-2D4A.dtsi"
#include "panel-sim.dtsi"
#include "tegra186-sim-hdmi.dtsi"

/ {
	model = "t186ref";
	compatible = "nvidia,tegra186";

	chosen {
		bootargs ="mem=1024M@2048M console=ttyS0,115200 earlyprintk=uart8250-32bit,0x70006000";
	};

	/* chosen */

	memory@80000000 {
		device_type = "memory";
		reg = < 0x0 0x80000000 0x0 0x40000000 >;
	};

	reserved-memory {
		#address-cells = <2>;
		#size-cells = <2>;
		ranges;

		generic_reserved: generic_carveout@0xa8f00000 {
			reg = <0 0xa8f00000 0 0x20000000>; /* HACK: 512MB */
			no-map;
		};
	};

	timer {
		compatible = "arm,armv8-timer";
		interrupts = <1 13 0xf01
			      1 14 0xf01
			      1 11 0xf01
			      1 10 0xf01>;
		clock-frequency = <38400000>;
	};

	serial@70006200 {
		compatible = "nvidia,tegra114-hsuart";
		status = "okay";
	};

	sdhci@700b0600 {
		tap-delay = <4>;
		trim-delay = <3>;
		mmc-ocr-mask = <0>;
		max-clk-limit = <200000000>;
		uhs_mask = <0x0>;
		bus-width = <8>;
		id = <3>;
		built-in;
		calib_3v3_offsets = <0x0202>;
		calib_1v8_offsets = <0x0202>;
		status = "okay";
	};
	ethernet@0x7ffff000 {
		compatible = "smsc,lan9115";
		reg = < 0x0 0x7ffff000 0x0 0x00000100 >;
		interrupts = <0 218 0x4>;
		reg-io-width = <4>;
		smsc,irq-active-high;
		smsc,irq-push-pull;
	};

	asim {
		compatible = "nvidia,tegra210-asim";
		reg = < 0x0 0x7e101000 0x0 0x00001000 >;
	};

	host1x {

		nvdisplay@0x54200000 {
			status = "okay";
			nvidia,fb-bpp = <32>; /* bits per pixel */
			nvidia,dc-flags = <TEGRA_DC_FLAG_ENABLED>;
			nvidia,fb-win = <0>;
			nvidia,dc-ctrlnum = <0>;
		};

		nvdisplay@0x54210000 {
			status = "okay";
			nvidia,fb-bpp = <32>; /* bits per pixel */
			nvidia,dc-flags = <TEGRA_DC_FLAG_ENABLED>;
			nvidia,fb-win = <3>;
			nvidia,dc-ctrlnum = <1>;
		};

		sor {
			status = "okay";
		};

		sor1 {
			status = "okay";
		};

		dpaux {
			status = "okay";
		};

		dpaux1 {
			status = "okay";
		};
	};
};
