config TEGRA_HSP
	bool "Enable Tegra Hardware Synchronization Primitives driver"
	depends on ARCH_TEGRA_18x_SOC
	default y

config TEGRA_IPC
	bool "Enable Tegra Inter-processor Communication Framework"
	select TEGRA_IVC
	default y

config TEGRA186_PMC
        bool "Tegra Power Management Controller"
	depends on ARCH_TEGRA_18x_SOC
        default y
        help
          Enable Tegra186 PMC.
